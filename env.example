# Configuração da Aplicação
PORT=8082

# CORS (lista separada por vírgula)
# Se o frontend web chamar esse serviço via browser, você precisa listar as origens aqui.
# Ex (local + PRD):
CORS_ALLOWED_ORIGINS=http://localhost:4200

# Focus NFe API (Empresas)
FOCUS_URL=https://api.focusnfe.com.br
# Token da sua conta na Focus (usado em BasicAuth: username=token, password="")
FOCUS_API_TOKEN=seu_token_focus_aqui

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua_service_role_key_aqui

# Segmented schemas:
# - company tables are under schema `company`.
SUPABASE_SCHEMA=company


# Swagger / OpenAPI (para Swagger UI em PRD não apontar para localhost)
# IMPORTANTE:
# - SWAGGER_HOST deve ser apenas host[:porta] (sem http/https e sem barra final)
# - SWAGGER_SCHEMES define o(s) esquema(s) usados pelo Swagger UI
#
# PRD (exemplo)
# SWAGGER_HOST=api-focus-integration-service.carteiracontabil.com
# SWAGGER_SCHEMES=https
#
# Local (exemplo)
# SWAGGER_HOST=localhost:8082
# SWAGGER_SCHEMES=http


